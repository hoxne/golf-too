		// TODO
	}

	public ArrayList<CollisionObjects> collideBallObj() {
		ArrayList<CollisionObjects> collisions = new ArrayList<CollisionObjects>();
		
		
		
		
		return collisions;
	}
	
	
		
	
	public static void main(String[] args) {
		
	}

}
