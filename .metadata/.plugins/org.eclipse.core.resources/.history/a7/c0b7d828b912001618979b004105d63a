package physicsManager;

import java.util.ArrayList;

public class PhysicsManager {

	private ArrayList<CollisionObjects>		colObjs;
	private ArrayList<Ball> 				balls;
	
	PhysicsManager(ArrayList<CollisionObjects> colObjs,
			ArrayList<Ball> balls) {

		this.colObjs = colObjs;
		this.balls = balls; // TODO instantiate
	}
	
	
	public PhysicsManager copy() {
		
		ArrayList<Ball> ballsDeepCopy = new ArrayList<Ball>();
		for(Ball b: this.balls) {
			ballsDeepCopy.add((Ball) b.clone());
		}
		
		
		PhysicsManager newPM = new PhysicsManager(colObjs, ballsDeepCopy);
		return newPM;
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
